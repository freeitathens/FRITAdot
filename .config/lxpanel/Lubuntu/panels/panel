    setdocktype=1
    setpartialstrut=1
    usefontcolor=1
    fontsize=10
    fontcolor=#000000
    usefontsize=0
    background=1
    backgroundfile=/usr/share/lxpanel/images/lubuntu-background.png
    iconsize=24
    loglevel=2
}

